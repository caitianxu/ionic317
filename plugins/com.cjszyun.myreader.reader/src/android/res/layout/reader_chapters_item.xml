<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tran2graybg_selector"
    android:gravity="center"
    android:minHeight="50.0dip">

    <LinearLayout
        android:id="@+id/vip_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_marginRight="5dp">

        <TextView
            android:id="@+id/vip_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/download_select_iv"
            android:layout_alignParentRight="true"
            android:layout_margin="4.0dip"
            android:textSize="12.5sp" />

        <ImageView
            android:layout_marginLeft="3dp"
            android:layout_marginRight="5dp"
            android:id="@+id/download_select_iv"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:visibility="gone"/>

    </LinearLayout>


    <TextView
        android:id="@+id/chapter_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="4.0dip"
        android:layout_toLeftOf="@id/vip_ll"
        android:gravity="left|center_vertical"
        android:textSize="14sp" />

</RelativeLayout>