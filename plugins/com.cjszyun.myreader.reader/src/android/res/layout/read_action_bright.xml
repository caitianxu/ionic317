<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >

    <CheckBox

        android:id="@+id/read_system_brightness_cb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/NormalMargin"
        android:layout_marginRight="@dimen/NormalMargin"
        android:layout_marginBottom="@dimen/SmallMargin"
        android:layout_marginTop="@dimen/LittleMargin"
        android:text="@string/system_brightness"
        android:textColor="@color/gray"
        android:textSize="@dimen/textsize_30" />

    <include layout="@layout/read_progress"/>

</LinearLayout>
