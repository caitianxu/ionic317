<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_above="@+id/readPopBottom"
        android:id="@+id/read_night_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="18dp"
        android:background="@drawable/day_night_round"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/read_night_iv"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerInParent="true"
            android:background="@null"
            android:src="@drawable/read_night" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/readPopBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <FrameLayout
            android:id="@+id/pop_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/readPopBottom"
            android:background="@color/light_black"
            android:minHeight="60dp"
            android:minWidth="60dp"
            android:visibility="invisible"></FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_black"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!--字体 隐藏-->
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/read_font_ib"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@drawable/lightblack2black_bg_selector">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_centerInParent="true"
                    android:background="@null"
                    android:src="@drawable/read_wz" />

            </RelativeLayout>

            <!--目录-->
            <RelativeLayout
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:id="@+id/read_menu_rl"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@drawable/lightblack2black_bg_selector">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@null"
                    android:src="@drawable/read_menu" />

            </RelativeLayout>

            <!--亮度-->
            <RelativeLayout
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:id="@+id/read_bright_ib"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@drawable/lightblack2black_bg_selector">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@null"
                    android:src="@drawable/read_light" />

            </RelativeLayout>

            <!--打赏 隐藏-->
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/read_ds_ib"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@drawable/lightblack2black_bg_selector">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_centerInParent="true"
                    android:background="@null"
                    android:src="@drawable/read_ds" />
            </RelativeLayout>

            <!--横竖屏切换 隐藏-->
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/read_portrait_ib"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@drawable/lightblack2black_bg_selector">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:background="@null"
                    android:scaleType="centerInside"/>

                <ImageView
                    android:id="@+id/portrait_select_iv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorPrimary"
                    android:visibility="invisible" />
            </RelativeLayout>

            <!--设置-->
            <RelativeLayout
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:id="@+id/read_more_ib"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@drawable/lightblack2black_bg_selector">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/read_setting" />
            </RelativeLayout>

            <!--下载-->
            <RelativeLayout
                android:visibility="gone"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:id="@+id/read_download_rl"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@drawable/lightblack2black_bg_selector">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/read_download" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>