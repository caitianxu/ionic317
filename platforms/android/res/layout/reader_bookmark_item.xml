<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/NormalPadding" >

    <TextView
        android:id="@+id/bookmark_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/bookmark_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bookmark_name_tv"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/textsize_25"/>
    <TextView
        android:id="@+id/bookmark_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/LittleMargin"
        android:layout_marginBottom="@dimen/LittleMargin"
        android:maxLines="5"
        android:ellipsize="end"
        android:layout_below="@id/bookmark_time_tv"
        android:textColor="@color/light_gray"
        android:textSize="13sp"/>


</RelativeLayout>
