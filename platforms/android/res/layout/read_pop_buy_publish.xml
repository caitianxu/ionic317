<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent" >

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F5F8FA">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <TextView
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:id="@+id/book_name_tv"
                android:text="大主宰"
                android:textColor="#333333"
                android:textSize="16sp"
                android:singleLine="true"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/close_iv"
                android:padding="8dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/close"
                android:layout_width="45dp"
                android:layout_height="45dp" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginBottom="10dp"></View>
        <LinearLayout
            android:id="@+id/detail_ll"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/chose_chapter_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:padding="1dp"
                        android:id="@+id/edit_chapter_ll"
                        android:layout_margin="5dp"
                        android:background="@drawable/grayline2redline_round_selector"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="50dp">
                        <TextView
                            android:layout_alignParentLeft="true"
                            android:gravity="center"
                            android:paddingLeft="18dp"
                            android:paddingRight="18dp"
                            android:id="@+id/chapter_down_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="-"
                            android:textSize="20sp"/>
                        <View
                            android:layout_toRightOf="@+id/chapter_down_tv"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/gray"></View>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="#F5F8FA"
                            android:layout_weight="1">
                            <EditText
                                android:inputType="number"
                                android:id="@+id/chapter_et"
                                android:layout_width="match_parent"
                                android:background="@null"
                                android:layout_height="match_parent"
                                android:text="2"
                                android:textSize="15sp"
                                android:gravity="center"/>
                            <TextView
                                android:layout_marginRight="5dp"
                                android:layout_alignParentRight="true"
                                android:id="@+id/zhang_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="章"/>
                        </RelativeLayout>

                        <View
                            android:layout_toLeftOf="@+id/chapter_up_tv"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/gray"></View>
                        <TextView
                            android:layout_alignParentRight="true"
                            android:gravity="center"
                            android:paddingLeft="18dp"
                            android:paddingRight="18dp"
                            android:id="@+id/chapter_up_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="+"
                            android:textSize="20sp"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/ten_chapter_rl"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/grayline2redline_round_selector">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="10章" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:id="@+id/forty_chapter_rl"
                        android:layout_margin="5dp"
                        android:background="@drawable/grayline2redline_round_selector"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="50dp">

                        <TextView
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="40章"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/oneh_chapter_rl"
                        android:layout_margin="5dp"
                        android:background="@drawable/grayline2redline_round_selector"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="50dp">

                        <TextView
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="100章"/>
                    </RelativeLayout>
                </LinearLayout>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/start_chapter_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起始章节："
                android:textSize="12sp"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/price_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/price_tv"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="价格：2000长江币"/>
                    <TextView
                        android:id="@+id/balance_tv"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="余额：20000长江币"/>
                </LinearLayout>
                <ProgressBar
                    android:id="@+id/loading_pb"
                    android:layout_gravity="center"
                    android:background="#F5F8FA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </FrameLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/have_buy_tv"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="您已购买该出版图书，是否下载？"/>

        </LinearLayout>

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="需支付："
                    android:textColor="#333333"/>
                <TextView
                    android:id="@+id/sure_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0长江币"
                    android:textColor="#E8554D"/>
            </LinearLayout>
            <TextView
                android:id="@+id/buy_tv"
                android:layout_margin="6dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认"
                android:textColor="@color/white"
                android:background="@drawable/red_round"/>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>